{
  "name": "eCommerce-site",
  "version": "1.0.0",
  "description": "eCommerse site clone build to learn project",
  "author": "Chingu-7 Bear-29 team",
  "scripts": {
    "client-start": "parcel ./client/index.html",
    "client-watch": "parcel watch ./client/index.html",
    "client-build": "parcel build ./client/index.html",
    "server-watch": "nodemon server/index.js",
    "dev": "concurrently --kill-others \"yarn server-watch\" \"yarn client-watch\"",
    "start": "yarn client-build && node server/index.js"
  },
  "dependencies": {
    "koa": "^2.6.2",
    "koa-static": "^5.0.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.6",
    "parcel-bundler": "^1.10.3"
  }
}
